<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A595D6"
    tools:context=".AddSparepartsActivity">

    <EditText
        android:id="@+id/spare_Name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Spare part"
        android:inputType="text"
        android:textAlignment="gravity"
        android:textColor="#0C2EEF"
        android:textColorHint="@color/black"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@+id/spare_price"
        app:layout_constraintEnd_toEndOf="@+id/spare_price"
        app:layout_constraintStart_toStartOf="@+id/spare_price"
        app:layout_constraintTop_toBottomOf="@+id/IntExt_spares" />

    <EditText
        android:id="@+id/IntExt_spares"
        android:layout_width="237dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Interior/Exterior"
        android:inputType="text"
        android:textColor="#0629F1"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/spare_Name"
        app:layout_constraintEnd_toEndOf="@+id/spare_price"
        app:layout_constraintStart_toStartOf="@+id/spare_Name"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="41dp"
        android:text="SPARE PARTS"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/IntExt_spares"
        app:layout_constraintStart_toStartOf="@+id/IntExt_spares"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/spare_price"
        android:layout_width="238dp"
        android:layout_height="0dp"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="text"
        android:textColor="#63EF0A"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_spareSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spare_Name" />

    <Button
        android:id="@+id/btn_spareSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="312dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spare_price"
        app:layout_constraintTop_toBottomOf="@+id/spare_price" />
</androidx.constraintlayout.widget.ConstraintLayout>