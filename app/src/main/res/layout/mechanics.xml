<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#24D6F1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mechname_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="18dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/mechlocation_view"
        app:layout_constraintEnd_toEndOf="@+id/mechlocation_view"
        app:layout_constraintStart_toStartOf="@+id/mechlocation_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mechlocation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/mechphone_view"
        app:layout_constraintEnd_toEndOf="@+id/mechphone_view"
        app:layout_constraintStart_toStartOf="@+id/mechphone_view"
        app:layout_constraintTop_toBottomOf="@+id/mechname_view" />

    <TextView
        android:id="@+id/mechphone_view"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="443dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechlocation_view" />
</androidx.constraintlayout.widget.ConstraintLayout>